<div class="container">
  <div class="jumbotron">
    <h2>List of favorite things</h2>
  </div>

  <% @list.each do |item| %>
    <h4><a href="/items/<%= item.id %>"><%= item.name %></a></h4>
  <% end %>

  <div class="well">
        <h4>Add an item to the list:</h4>
    <form action="/" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" class="form-control" type="text">
      </div>
      <button type="submit" class="btn btn-primary">Go!</button>
    </form>
    <form class="form-group" method="post" action="/runClear">
            <button type="submit" class="btn btn-warning" name="clear_btn" value="clear">Clear</button>
    </form>
  </div>
</div>
